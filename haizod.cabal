-- Initial heizod.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                haizod
version:             0.1.1
synopsis:            An IRC bot on a Raspberry Pi 2
homepage:            https://github.com/Lokathor/haizod
license:             AGPL-3
license-file:        LICENSE.txt
author:              Lokathor
maintainer:          zefria@gmail.com
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

-- Use with LTS 3.13 to get the correct package versions.
library
    hs-source-dirs:     src
    exposed-modules:    Haizod.IRC.Parse,
                        Haizod.IRC.Format,
                        Haizod.IRC.Data
    build-depends:      base,
                        network,
                        network-simple,
                        async,
                        bytestring,
                        stm,
                        containers,
                        text,
                        mtl
    ghc-options:        -threaded -rtsopts -with-rtsopts=-N
    default-language:   Haskell2010

test-suite tests
    type:               exitcode-stdio-1.0
    hs-source-dirs:     tests
    main-is:            Tests.hs
    other-modules:      Haizod.IRC.ParseTests,
                        Haizod.IRC.FormatTests
    build-depends:      base,
                        hspec,
                        QuickCheck,
                        haizod
    default-language:   Haskell2010

executable haizod
    main-is:            Main.hs
    other-modules:      Haizod.IRC.Parse,
                        Haizod.IRC.Format,
                        Haizod.IRC.Data
    build-depends:      haizod,
                        base,
                        network,
                        network-simple,
                        async,
                        bytestring,
                        stm,
                        containers,
                        text,
                        mtl
    hs-source-dirs:     src
    default-language:   Haskell2010
    ghc-options:        -threaded -rtsopts -with-rtsopts=-N -O2
